<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textColor">@color/dark_gray</item>
		<item name="android:background">@drawable/standard_button</item>
	</style>
	
   	<style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">60sp</item>
    </style>
    
   	<style name="Headings" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">35sp</item>
    </style>
    
   	<style name="SwipeIndicators" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">22sp</item>
    </style>
    
   	<style name="BodyText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/myWhite</item>
        <item name="android:textSize">16sp</item>
    </style>
    
   	<style name="Hint">
   	    <item name="android:textColorHint">@color/lightGray</item>
   	    <item name="android:background">@drawable/edittext_background</item>
   	    <item name="android:textCursorDrawable">@drawable/cursor</item>
   	</style>
</resources>
