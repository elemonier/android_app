<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- source: docs.xamarin.com/recipes/android/resources/general/style_a_button/ -->
    
	<item android:state_pressed="true" >
    	<shape>
      		<solid
          		android:color="@color/myDarkerBackground" />
	      	<corners
	      	    android:radius="6dp" />
	      	<padding
	       	   android:left="10dp"
	       	   android:right="10dp"
	       	   android:top="10dp"
	           android:bottom="10dp" />
	    </shape>
	</item>

  	<item>
    	<shape>
      		<solid
          		android:color="@color/background"/>
      		<stroke
      		  	android:color="@color/secondary"  
      		  	android:width="2dp"
      		/>
      		<corners
          		android:radius="6dp" />
      		<padding
          		android:left="10dp"
          		android:right="10dp"
          		android:top="10dp"
          		android:bottom="10dp" />
    	</shape>
  	</item>
</selector>